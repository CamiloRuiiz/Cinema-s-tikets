<div class="modal fade" id="modal-form" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Book your tickets:</h4>
      </div>
      <div class="modal-body">
        <form action="/confirmation" method="post">
          <div class="form-group">
            <label>Name</label>
            <input type="text" class="form-control" name="name" id="name" value="">
          </div>
          <div class="form-group">
            <label>Last name</label>
            <input type="text" class="form-control" name="lastname" id="lastname" value="">
          </div>
          <div class="form-group">
            <label>Mail</label>
            <input type="text" class="form-control" name="mail" id="mail" value="">
          </div>
          <div class="form-group">
            <label>Phone</label>
            <input type="text" class="form-control" name="phone" id="phone" value="">
          </div>
          <div class="form-group">
            <label>Select Movie</label>
            <select class="form-control" name="list_films" id="list_films">
              <option value="Sin City">Sin City</option>
            </select>
          </div>
          <div class="form-group">
            <p style="text-align: center;">Price:<br /><strong>1 BitCoin</strong></p>
          </div>
          <button type="submit" class="btn btn-primary btn-lg btn-block" id="send">Send</button>
        </form>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
