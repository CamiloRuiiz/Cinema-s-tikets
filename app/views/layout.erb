<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf8">
    <title><%= @site_title %></title>
    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script src"/bower_components/jquery/dist/jquery.min.js"></script>
    <script src"/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <header style="margin-bottom: 60px; display: inline-block; width: 100%">
          <hgroup>
            <div class="col-lg-3">
              <img src="/img/logo.png" width="50%" alt="logo Cinelandia">
            </div>
            <div class="col-lg-9">
              <h2>The best movies</h2>
            </div>
          </hgroup>
        </header>
      </div>
      <div class="row">
        <%= yield %>
      </div>
      <div class="row">
        <div class="col-lg-12">
          <footer style="padding: 20px">
            <div class="copy-rigth" style="height: 40px;">
              <div class="col-lg-8">
                <div class="movie-of-the-week">
                  <h4>Movie of the week:<%= FILM_OF_THE_WEEK %></h4>
                </div>
              </div>
              <div class="col-lg-4 pull-left">
                <div class="created-by" style="margin: 5px 0 5px 0">
                  <p>Created by
                    <a href="//github.com/Camiloruiiz">Camilo Ruiz</a>
                  </p>
                </div>
              </div>
            </div>
          </footer>
        </div>
      </div>
    </div>
  </body>
</html>
